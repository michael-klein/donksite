---
export interface Props {
  title: string;
}

const { title } = Astro.props;
import "../reset.css";
import "../styles.scss";
import Navigation from "../components/Navigation.astro";
import Footer from "../components/Footer.astro";
import Logo from "../components/Logo.astro";
---

<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
  </head>
  <body
    ><main>
      <Logo />
      <header>
        <Navigation />
      </header>
      <slot />
    </main>
    <Footer />
  </body>
  <style lang="scss">
    body {
      width: 100%;
      overflow-x: hidden;
      font-family: sans-serif;
      background: #101125 url(/bg2.png);
      background-position-x: 80vw;
      background-size: 50%;
      padding: 0;
      margin: 0;
    }
    main {
      position: relative;
      min-height: 100vh;
      padding-bottom: 6rem;
      padding-left: 1rem;
      padding-right: 1rem;
      background: url(/bg2.png);
      margin: 0px;
      -webkit-font-smoothing: antialiased;
      -moz-osx-font-smoothing: grayscale;
      text-rendering: optimizeLegibility;
    }
    header {
      z-index: 1000;
      display: block;
      position: sticky;
      top: -100px;
      width: 100%;
      height: 299px;
    }

    @media only screen and (max-width: 600px) {
      header {
        * {
          text-align: left !important;
        }
      }
      $offset: 30px;
      main {
        margin-top: -$offset;
        padding-bottom: -1 * $offset;
        min-height: calc(100vh + $offset);
      }

      :global(article) {
        font-size: 1.1rem !important;
      }
    }
  </style>
  <script>
    const now = Date.now();
    let queued = false;
    window.addEventListener("scroll", () => {
      if (!queued) {
        queued = true;
        requestAnimationFrame(() => {
          queued = false;
          document.body.style.backgroundPositionY = `${
            window.scrollY * 0.2
          }px`;
          document.querySelector("main").style.backgroundPositionY = `${
            window.scrollY * 0.4
          }px`;
        });
      }
    });
  </script>
</html>
