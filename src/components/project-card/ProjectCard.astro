---
export interface Props {
  name: string;
  html_url: string;
  description: string;
  stargazers_count: number;
  topics: string[];
}
export type ProjectCardProps = Props;

const { description, html_url, name, stargazers_count, topics } = Astro.props;
---

<li class="project-card">
  <a href={html_url}>
    <div>
      <h2>
        <div>{name}</div>
        <div class="stars">{stargazers_count}</div>
      </h2>
      <p>
        {description}
      </p>
    </div>
  </a>
</li>

<style lang="scss">
  $spacing: 36px;
  .project-card {
    margin: 0;
    font-size: 1.2rem;
    width: 100%;
    font-weight: 500;
    a {
      display: block;
      height: 100%;
      background: #fde1db00;
      border-radius: 10px;
      box-shadow: 0px 0px 1px 1px rgb(200 85 194 / 99%);
      > div {
        height: 100%;
        padding: 1rem;
        border-radius: 10px;
        box-shadow: 0px 0px 9px 2px #41effd2e inset;
      }
      h2 {
        display: flex;
        font-size: 1.4rem;
        > div:not(.stars) {
          flex: auto;
        }
        .stars {
          display: flex;
          align-items: center;
          font-size: 1rem;

          &:before {
            display: inline-block;
            content: "\2605";
          }
        }
      }
      &,
      &:link,
      &:active,
      &:hover {
        color: #96bed4;
        text-decoration: none;
        text-shadow: 0 0 2px #5f305a;
      }
      &:hover {
        background: #41effd29;
      }
    }
  }
</style>
